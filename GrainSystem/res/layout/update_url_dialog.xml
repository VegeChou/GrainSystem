<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/dialog_view" 
	android:orientation="vertical"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:minHeight="60dp"
	android:minWidth="180dp"
	android:gravity="center"
	android:padding="10dp">
	
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="IP:"
	        android:textColor="#FFFFFF"/>
		
	    <EditText 
	        android:id="@+id/update_url_dialog_et_update_server_ip"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:hint="更新服务器IP"
	        android:text="@string/update_server_ip"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
	    
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Port:"
	        android:textColor="#FFFFFF"/>
	
	    <EditText 
	        android:id="@+id/update_url_dialog_et_update_server_port"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:hint="更新服务器端口"
	        android:text="@string/update_server_port"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
	    
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="校验路径:"
	        android:textColor="#FFFFFF"/>
	
	    <EditText 
	        android:id="@+id/update_url_dialog_et_update_server_check_path"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:hint="更新服务器校验路径"
	        android:singleLine="true"
	        android:text="@string/update_server_check_path"/>
	</LinearLayout>
	
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
	    
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="下载路径:"
	        android:textColor="#FFFFFF"/>
	
	    <EditText 
	        android:id="@+id/update_url_dialog_et_update_server_download_path"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:hint="更新服务器下载路径"
	        android:singleLine="true"
	        android:text="@string/update_server_download_path"/>
  	</LinearLayout>
    
</LinearLayout>