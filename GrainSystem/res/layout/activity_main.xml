<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/back_ground_1">
    
    <com.aisino.grain.ui.util.MenuImageView
        android:id="@+id/main_btn_warehouse_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/warehouse_info"
        android:layout_marginBottom="6dp"
        android:scaleType="matrix"/>
    <com.aisino.grain.ui.util.MenuImageView
        android:id="@+id/main_btn_register_vehicle_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/regist_vehicle_work"
        android:layout_marginBottom="6dp"
        android:scaleType="matrix"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="6dp">

        <com.aisino.grain.ui.util.MenuImageView
            android:id="@+id/main_btn_adjust_quality_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/adjust_deduction_discount"
            android:scaleType="matrix"/>
        
        <LinearLayout 
            android:layout_width="6dp"
            android:layout_height="wrap_content"/>

        <com.aisino.grain.ui.util.MenuImageView
            android:id="@+id/main_btn_tasking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tasking"
            android:scaleType="matrix"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="6dp">

        <com.aisino.grain.ui.util.MenuImageView
            android:id="@+id/main_btn_tasked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tasked"
            android:scaleType="matrix"/>
        <LinearLayout 
            android:layout_width="6dp"
            android:layout_height="wrap_content"/>

        <com.aisino.grain.ui.util.MenuImageView
            android:id="@+id/main_btn_regist_weighting_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/regist_weighting_weight"
            android:scaleType="matrix"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.aisino.grain.ui.util.MenuImageView
            android:id="@+id/main_btn_retreat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/retreat"
            android:scaleType="matrix" />
        
        <LinearLayout 
            android:layout_width="6dp"
            android:layout_height="wrap_content"/>

        <com.aisino.grain.ui.util.MenuImageView
            android:id="@+id/main_btn_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/help"
            android:scaleType="matrix"/>

    </LinearLayout>
</LinearLayout>
