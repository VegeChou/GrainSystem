<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="CornerButton" parent="@android:style/TextAppearance.Widget.Button">
        <!-- All customizations that are NOT specific to a android:particular API-level can go here. -->
        <item name="android:height">45dp</item>
        <item name="android:width">60dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/corner_btn_selector</item>
    </style>
    
    <style name="TextViewBackGroundLeft" parent="@android:style/TextAppearance.Small">
        <!-- All customizations that are NOT specific to a android:particular API-level can go here. -->
        <item name="android:height">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/textview_background_left</item>
    </style>
    
    <style name="TextViewBackGroundRight" parent="@android:style/TextAppearance.Small">
        <!-- All customizations that are NOT specific to a android:particular API-level can go here. -->
        <item name="android:height">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/textview_background_right</item>
    </style>
    
    <style name="TextViewBackGround" parent="@android:style/TextAppearance.Small">
        <!-- All customizations that are NOT specific to a android:particular API-level can go here. -->
        <item name="android:height">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/textview_background</item>
    </style>
    
    <style name="EditTextBackGround" parent="@android:style/TextAppearance.Small">
        <!-- All customizations that are NOT specific to a android:particular API-level can go here. -->
        <item name="android:height">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/edittext_background</item>
    </style>
    
    <style name="EditTextDisableBackGround" parent="@android:style/TextAppearance.Small">
        <!-- All customizations that are NOT specific to a android:particular API-level can go here. -->
        <item name="android:height">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/edittext_disable_background</item>
    </style>
    
    <style name="TextViewInfoBackGround" parent="@android:style/TextAppearance.Small">
        <!-- All customizations that are NOT specific to a android:particular API-level can go here. -->
        <item name="android:height">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/textview_info_background</item>
    </style>
    
    <style name="TextViewNoBackGround">
        <!-- All customizations that are NOT specific to a android:particular API-level can go here. -->
        <item name="android:height">35dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="CornerAlertDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/corner_alertdialog</item>  
        <item name="android:windowNoTitle">true</item>  
    </style>
    
    <style name="TextViewTitle">
        <item name="android:background">@drawable/tv_title</item>  
        <item name="android:height">30dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>
        
    <style name="MySpinner">
        <item name="android:background">@drawable/spinner_selector</item>  
        <item name="android:gravity">center</item>
    </style>
    
    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
		<item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
       	<item name="android:windowBackground">@drawable/popup_window</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
	</style>
    
</resources>